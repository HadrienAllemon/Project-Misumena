{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "models/*": [
        "src/models/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "shared/*": [
        "../shared/*"
      ]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    // "../backend/src/shared/**/*.ts",
    // "../backend/src/socket/users/UsersAction.ts",
    // "../backend/src/models/Room.ts",
    // "../backend/src/shared/sharedModels/IRoom.ts",
    // "../backend/src/objects/VoteState.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}